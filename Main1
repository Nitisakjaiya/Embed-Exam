#include <WiFi.h>
#include <MQTT.h>

const char ssid[] = "NiTi";
const char pass[] = "444444444";

const char mqtt_broker[] = "test.mosquitto.org";
const char mqtt_topic[]  = "group18/embed";
const char mqtt_client_id[] = "arduino_group18_button"; 
int MQTT_PORT = 1883;

#define BUTTON_PIN 23
#define LED_PIN    22

WiFiClient net;
MQTTClient client;

bool lastButtonState = HIGH;   // INPUT_PULLUP

// ================= MQTT CALLBACK =================
void messageReceived(String &topic, String &payload) {
  Serial.println("incoming: " + topic + " - " + payload);

  if (payload == "on") {
    digitalWrite(LED_PIN, HIGH);
    Serial.println("LED ON (from MQTT)");
  }
  else if (payload == "off") {
    digitalWrite(LED_PIN, LOW);
    Serial.println("LED OFF (from MQTT)");
  }
}

// ================= CONNECT =================
void connect() {
  Serial.print("checking wifi...");
  while (WiFi.status() != WL_CONNECTED) {
    Serial.print(".");
    delay(1000);
  }

  Serial.print("\nconnecting MQTT...");
  while (!client.connect(mqtt_client_id)) {
    Serial.print(".");
    delay(1000);
  }

  Serial.println("\nconnected!");
  client.subscribe(mqtt_topic);   // <<< สำคัญ
}

// ================= SETUP =================
void setup() {
  Serial.begin(9600);

  pinMode(BUTTON_PIN, INPUT_PULLUP);
  pinMode(LED_PIN, OUTPUT);
  digitalWrite(LED_PIN, LOW);

  WiFi.begin(ssid, pass);

  client.begin(mqtt_broker, MQTT_PORT, net);
  client.onMessage(messageReceived);

  connect();
}

// ================= LOOP =================
void loop() {
  client.loop();
  delay(10);

  if (!client.connected()) {
    connect();
  }

  // ===== ส่งสถานะปุ่มไป MQTT =====
  bool currentButtonState = digitalRead(BUTTON_PIN);

  if (currentButtonState != lastButtonState) {

    if (currentButtonState == HIGH) {
      client.publish(mqtt_topic, "Button Pressed");
      Serial.println("Button Pressed");
      digitalWrite(LED_PIN, HIGH);
    } else {
      client.publish(mqtt_topic, "Button Released");
      Serial.println("Button Released");
      digitalWrite(LED_PIN, LOW);
    }

    lastButtonState = currentButtonState;
    delay(50);
  }
}